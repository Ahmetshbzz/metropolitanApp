{
  "name": "backend",
  "version": "1.0.0",
  "description": "Metropolitan App Backend API with Bun and Elysia",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "clean": "rm -rf dist node_modules",
    "test": "bun test"
  },
  "dependencies": {
    "elysia": "latest"
  },
  "devDependencies": {
    "bun-types": "latest",
    "@types/bun": "latest"
  },
  "type": "module"
}
