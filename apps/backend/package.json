{
  "name": "backend",
  "version": "1.0.0",
  "description": "Metropolitan App Backend API with Bun and Elysia",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "clean": "rm -rf dist node_modules",
    "test": "bun test",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "healthcheck": "curl -f http://localhost:3000/health || exit 1"
  },
  "dependencies": {
    "@elysiajs/graphql-yoga": "^1.3.0",
    "@elysiajs/swagger": "^1.3.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.11.10",
    "auth0": "^4.28.0",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "elysia": "latest",
    "graphql": "^16.11.0",
    "graphql-yoga": "^5.15.1",
    "jsonwebtoken": "^9.0.2",
    "node-auth0": "^1.0.0",
    "postgres": "^3.4.4",
    "redis": "^4.7.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.4",
    "ts-node": "^10.9.2"
  },
  "type": "module"
}
